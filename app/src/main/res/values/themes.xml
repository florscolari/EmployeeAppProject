<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.EmployeeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- To remove the default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- todo: change for my own ones after the logic works -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EmployeeApp" parent="Base.Theme.EmployeeApp" />

    <style name="error_red">
        <!-- Helper Text -->
        <item name="android:textColor">@color/red</item>
    </style>
</resources>